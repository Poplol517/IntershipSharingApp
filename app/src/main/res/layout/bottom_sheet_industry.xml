<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="20dp"
    android:background="@android:color/white">

    <!-- Displaying industry title -->
    <TextView
        android:id="@+id/txt_industry_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Industry Name"
        android:textSize="20sp"
        android:textStyle="bold"
        android:paddingBottom="10dp" />

    <!-- Edit Industry Button -->
    <Button
        android:id="@+id/btn_edit_industry"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Edit Industry"
        android:backgroundTint="@android:color/holo_blue_light"
        android:textColor="@android:color/white" />

    <!-- Delete Industry Button -->
    <Button
        android:id="@+id/btn_delete"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Delete Industry"
        android:backgroundTint="@android:color/holo_red_light"
        android:textColor="@android:color/white"
        android:layout_marginTop="10dp" />

    <!-- Edit Text and Save button layout, initially hidden -->
    <LinearLayout
        android:id="@+id/edit_layout"
        android:orientation="vertical"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="20dp">

        <!-- Edit Text for industry name -->
        <EditText
            android:id="@+id/edit_industry_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Enter new industry name"
            android:textSize="16sp"
            android:layout_marginBottom="10dp"
            android:inputType="text" />

        <!-- Save button to save the changes -->
        <Button
            android:id="@+id/btn_save_industry"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Edit Industry"
            android:backgroundTint="@android:color/holo_green_light"
            android:textColor="@android:color/white" />
    </LinearLayout>
</LinearLayout>
